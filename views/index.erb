<article class="featured">
    <section class="title">
        <div class="block">
            <h1 class="page_heading">Please, help us fund a cure for cystic fibrosis</h1>
            <p class="page_sub">Time Heals All Wounds. Yours Can Help Heal Cystic Fibrosis. Get Involved Today.</p>
        </div>        
    </section>
    <%=partial(:photogrid) %>
</article>
<article class="furly">
    <section class="block">
        <div class="left col">
            <% @entries[0..3].each do |entry| %>
            <div class="post">
                <div class="post_head">
                    <h3><%=entry.title %></h3>
                    <!-- <ul class="nav">
                        <li></li>
                    </ul> -->
                </div>
                <div>
                    <%=entry.content%>
                </div>
            </div>
            <% end %>
        </div>
        <div class="right col">
            <h3>Connecting for a Cure</h3>
            <%=partial(:smallgrid) %>
        </div>
    </div>
</article>



